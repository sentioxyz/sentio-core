{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",

    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": false,

    "moduleResolution": "Bundler",
    "isolatedModules": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
